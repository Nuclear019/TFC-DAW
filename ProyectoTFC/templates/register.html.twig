<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pokemon Tower Battleground - Registro{% endblock %}</title>
    <link rel="shortcut icon" href="assets/images/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-dark text-white">
        {% block body %}
        <div class="container">
        <div class="row justify-content-center">
        <img style="width:400px"  src="assets/images/logo.png" />
        </div>
        <div  class="row justify-content-center">
            <div class="col-md-6 ">
                <h1 class="text-center">Registrate aqui para empezar!</h1>

                {{ form_start(form, {'attr': {'class': 'form-control bg-secondary text-center mx-auto'}}) }}
                <div>
                    {{ form_row(form.username) }}
                </div>
                <div>
                    {{ form_row(form.password,{'attr':{'minlength':'8'}}) }}
                </div>
                <br/>
                {% if error == 1 %}
                    <b class="text-warning">Ese usuario ya existe!</b>
                    <p class="text-warning">Prueba con otro nombre.</p>

                {% endif %}
                <div>
                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                <a class="text-black" href="{{ path('app_login')}}">Ya tengo una cuenta</a>

                {{ form_end(form) }}

            </div>
        </div>
    </div>       
        {% endblock %}
    </body>
</html>